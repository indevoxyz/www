---
import "../styles/global.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import UnstyledBase from "./UnstyledBase.astro";

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonicalURL?: string;
  noindex?: boolean;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  title,
  description,
  keywords,
  ogImage,
  canonicalURL,
  noindex,
  hideHeader = false,
  hideFooter = false,
} = Astro.props;
---

<UnstyledBase
  title={title}
  description={description}
  keywords={keywords}
  ogImage={ogImage}
  canonicalURL={canonicalURL}
  noindex={noindex}
>
  <div class="min-h-screen flex flex-col">
    {!hideHeader && <Header />}

    <main class="flex-grow">
      <slot />
    </main>

    {!hideFooter && <Footer />}
  </div>
</UnstyledBase>
